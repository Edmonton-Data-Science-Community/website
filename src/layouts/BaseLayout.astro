---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <!-- Making footer stick to the bottom of the page -->
    <!-- https://blog.cetindere.de/make-footers-stick-to-the-bottom-of-the-page-in-bulma/ -->

    <Header />
    <div class="columns is-flex-direction-column is-fullheight-100vh">
      <div class="column has-text-centered">
        <div class="section">
          <h1 class="title">
            {pageTitle}
          </h1>
        </div>
        <slot />
      </div>

      <Footer class="column is-narrow" />
    </div>
  </body>
</html>
