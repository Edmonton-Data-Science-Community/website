---
import { Image } from "astro:assets";

const { image, title, link } = Astro.props;
---

<div class="card sponsorship-card">
  <a href={link}>
    <div class="card-image">
        <Image
          class="sponsorship-logo"
          src={image}
          width="150"
          height="150"
          alt="KPMG Logo"
        />
    </div>
    <footer class="card-footer">
        <h3 class="card-footer-item">{title}</h3>        
    </footer>
  </a>
</div>

<style>
  .sponsorship-logo {
    border-radius: 3%;
    margin-bottom: 1rem;
  }
  .sponsorship-card {
    height: 100%;
    padding: 1rem;
    border: 1px solid #eaeaea;
    border-radius: 10px;
    transition:
      color 0.15s ease,
      border-color 0.15s ease;
  }

  .sponsorship-card:hover,
  .sponsorship-card:focus,
  .sponsorship-card:active {
    color: #0070f3;
    border-color: #0070f3;
  }

  .sponsorship-card h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .sponsorship-card p {
    margin: 0;
    font-size: 1.25rem;
    line-height: 1.5;
  }
</style>
